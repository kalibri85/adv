<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="http://127.0.0.1:8800/images/favicon.ico">
    <title>{% block title %}Registracija{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    {% endblock %}
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block canonical_meta %}{% endblock %}
</head>
<body>
<div class="bgr">
    <!--==============================header=================================-->
    <header>
        <h2 class="method2"></h2>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="sign"><i class="fas fa-user"></i> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</div>
            <a class="dropdown-item" href="{{ path('advertisements_my') }}">My Advertisements</a>
            <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Log out</a>
        {% else %}
            <a class="sign" id="LoginButton" href="{{ path('fos_user_security_login') }}">
                <i class="fas fa-unlock-alt"></i> Log in
            </a>
            <a class="sign" id="LoginButton" href="{{ path('fos_user_registration_register') }}">
            New User Registration
        </a>
        {% endif %}


        <a href="{{ path('advertisements_add') }}" class="btn btn-outline-dark top-btn"><i class="fas fa-plus"></i> PridÄ—ti</a>
    </header>
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}


</body>
</html>
