<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="http://127.0.0.1:8800/images/favicon.ico">
    <title>{% block title %}Registracija{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900|Raleway:400,300,700,900" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
         {% endblock %}
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block canonical_meta %}{% endblock %}
</head>
<body>
    <!--==============================header=================================-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="col-md-12 logged">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %} <i class="fas fa-user"></i> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} {% endif %}
            </div>
                <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-circle"></i>ADV</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('home') }}">HOME</a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li><a href="{{ path('advertisements_add') }}"><i class="fas fa-plus"></i> NEW ADVERTISMENT</a></li>
                    <li><a href="{{ path('advertisements_my') }}">MY ADVERTISEMENTS</a></li>
                    <li> <a href="{{ path('fos_user_security_logout') }}">LOG OUT</a></li>
                    {% else %}
                        <li> <a class="sign" id="LoginButton" href="{{ path('fos_user_security_login') }}">
                            <i class="fas fa-unlock-alt"></i> LOG IN
                        </a></li>
                        <li>  <a class="sign" id="LoginButton" href="{{ path('fos_user_registration_register') }}">
                                NEW USER REGISTRATION </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <div id="headerwrap">
        <div class="container">
            <div class="row centered">
                <div class="col-lg-8 col-lg-offset-2">
                    <h1>Advertise </h1>
                    <h2>with us</h2>
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- headerwrap -->



    {% block body %}{% endblock %}

    <!-- FOOTER -->

    <div id="copyrights">
        <div class="container">
            <p>
                &copy; Copyrights All Rights Reserved
            </p>
        </div>
    </div>

{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
    <script src="{{ asset('build/js/main.js') }}"></script>
    <script src="{{ asset('build/js/jquery.min.js') }}"></script>
    <script src="{{ asset('build/js/bootstrap.min.js') }}"></script>

{% endblock %}


</body>
</html>
