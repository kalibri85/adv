{% extends 'base.html.twig' %}

{% block title %}Homepage {% endblock %}

{% block body %}
    <!-- PORTFOLIO SECTION -->
    {% for advertisement in advertisements if advertisements is defined %}
    <div id="dg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-md-3">
                        <div class="adv">
                            <i class="fas fa-ad"></i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4>{{ advertisement.date|date("Y-m-d") }} - {{ advertisement.title }}</h4>
                        <p>{{ advertisement.description }}</p>
                    </div>
                    <div class="col-md-3">
                        <b>Name:</b> {{ advertisement.User.username }}
                    </div>
                </div>
            </div>

            <!-- row -->
        </div>
        <!-- container -->
    </div>
        <hr>
    {% endfor %}

    <!-- container -->

{% endblock %}